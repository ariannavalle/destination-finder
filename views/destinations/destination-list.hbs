<section class="home-slider owl-carousel">
  <div class="slider-item" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row slider-text align-items-center">
        <div class="col-md-7 col-sm-12 ftco-animate">
          <h1 class="mb-3">Your Top 10 Destinations</h1>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- END slider -->

<div class="destination-list">
  <div>
  </div>
  {{#each places}}
  <div class="destination">
    <h2>{{this.name}}, {{this.country_name}}</h2>
    <img width="550" height="350" src={{this.img}}>
    <h4>Rating: {{this.rate}}</h4>
    <h4>Occurences: {{this.count}}</h4> (for testing purposes, to be removed later)
  </div>
  {{/each}}
</div>