<section class="home-slider owl-carousel">
  <div class="slider-item" style="background-image: url('images/bg_1.jpg');" data-stellar-background-ratio="0.5">
    <div class="overlay"></div>
    <div class="container">
      <div class="row slider-text align-items-center">
        <div class="col-md-7 col-sm-12 ftco-animate">
          <h1 class="mb-3">Your Top 10 Destinations</h1>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- END slider -->

<div class="destination-list">
  <div>
  </div>
  {{#each places}}
  <div class="destination ftco-animate">
    <img width="30" height="30" class="heart-icon" city-id="{{this._id}}" src="images/heart_inactive.png" alt="Add {{this.name}} to favorites" >    
    
    <h2>
      <a href="/city/{{ this.name }},_{{ this.country_name }}">{{this.name}}, {{this.country_name}}</a>
    </h2>
    
    <a href="/city/{{ this.name }},_{{ this.country_name }}">
      <img width="550" height="350" src={{this.img}}>
    </a>

    <p>Population: {{this.population}}</p>
  </div>
  {{/each}}
</div>