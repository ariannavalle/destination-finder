      <div id="commentForm" city-id={{ city.details._id }}>
        <div class="form-group">
            <label for="email" class="col-sm-3 control-label">Let us know about your trip</label>
            <div class="col-sm-10">
              <textarea maxlength="300" class="form-control" name="content" id="addComment" rows="5"></textarea>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">                    
                <button class="btn btn-success btn-circle text-uppercase" type="submit" id="submitComment"><span class="glyphicon glyphicon-send"></span>Submit</button>
            </div>
        </div>
      </div>

      <br>

      <div id="userComments">
        {{#each city.details.posts}}
          <div class="media border p-3 ftco-animate">
            <img src={{ this.user.image }} alt={{ this.user.username }} class="mr-3 mt-3 rounded-circle" style="width:60px; height:60px;">
            <div class="media-body">
              <h4>{{ this.user.username }} <small><i>{{ this.createdAt }}</i></small></h4>
              <p>{{ this.content }}</p>
            </div>
            {{#if this.owner}}
              <a class="btn" href="/post/edit/{{ this._id }}">Edit</a>
              <a class="btn" href="/post/delete/{{ this._id }}/{{ ../city.details._id }}">Delete</a>
            {{/if}}
          </div>
        {{/each}}
        <br>
      </div>
    </div>
    
